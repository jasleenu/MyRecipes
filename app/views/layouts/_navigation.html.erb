<header class ="navbar navbar-fixed-top navbar-default" >
  <div class = "container">
    <%= link_to "myRecipes", home_path, class: "btn btn-lg btn-success", id: "logo" %>
    <div class="nav_item">
      <ul class ="nav_ul_item">
        <li class = "dropdown">
            <%= link_to '#', class: "btn btn-default btn-warning dropdown-toggle", "data-toggle" => "dropdown" do %>
            Styles
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <% Style.all.each do |style| %>
              <li><%= link_to style.name, style_path(style) %></li>
              <% end %> 
              <% if logged_in? %>
              <li class='divider'></li>
              <li><%= link_to "New Style", new_style_path %></li>
              <% end %>
            </ul>
          </li>
      </ul>
     <ul class ="nav_ul_item">
        <li class = "dropdown">
            <%= link_to '#', class: "btn btn-default btn-warning dropdown-toggle", "data-toggle" => "dropdown" do %>
            Ingredients
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <%Ingredient.all.each do |ingredient| %>
              <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
              <% end %> 
              <% if logged_in? %>
              <li class='divider'></li>
              <li><%= link_to "New Ingredient", new_ingredient_path %></li>
              <% end %>
            </ul>
          </li>
      </ul>
      <% if logged_in? %>
        <ul class ="nav_ul_item">
            <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
        </ul>
        <ul class ="nav_ul_item">
          <li class = "dropdown">
            <%= link_to '#', class: "btn btn-default btn-success dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "View Profile", chef_path(current_user) %></li> 
              <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li> 
              <li class= "divider" ></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        </ul>
        <% else %>
          <ul class ="nav_ul_item">
            <%= link_to "Log In", login_path, class: "btn btn-default btn-warning" %>
          </ul>
        <%end %>
  </div>
  </div>
</header>